
    #include <SPI.h>  
    #include <Ethernet.h> 
    #include <Stepper.h> 
       
    // Enter a MAC address, IP address and Portnumber for your Server below.  
    // The IP address will be dependent on your local network:  
    byte mac[] = { 0xDE, 0xAD, 0xBE, 0xEF, 0xFE, 0xED };  
    IPAddress serverIP(192,168,0,124);  
    int serverPort=8888;  
    const int e1 = 6;
    const int e2 = 7;
    const int e3 = 8;
    const int e4 = 9;
    char vetC[3];
     int temp1=0;
    int temp2=0;
    int temp3=0;
    int temp4=0;
    int j=0;
    int contMOTOR = 0;
    int contSENTIDO = 0;
 
    const int ledPin = 13; //PINO DIGITAL UTILIZADO PELO LED

    const int passosPorGiro=64;
    Stepper mp(passosPorGiro,e1,e3,e2,e4);
       
    // Initialize the Ethernet server library  
    // with the IP address and port you want to use  
    EthernetServer server(serverPort);  
    
    void motor(int vel, int sentido,int loop,int tmp, int passos){
    mp.setSpeed(vel);
    for(int i=0;i<passos*loop;i++){
    mp.step(passosPorGiro*sentido);
    contMOTOR=passos;
    contSENTIDO=sentido;
   delay(tmp);
  }
    delay(tmp*2);
  }
  
       
    void setup()  
    {  
      
      // start the serial for debugging  
      Serial.begin(9600);  
      // start the Ethernet connection and the server:  
      Ethernet.begin(mac, serverIP);  
      server.begin();  
      Serial.println("Server started");//log  
      pinMode(ledPin, OUTPUT); //DEFINE O PINO COMO SAÃDA
  digitalWrite(ledPin, LOW); //LED INICIA DESLIGADO
    }  
       
    void loop()  
    {  
      int sensorValue = analogRead(A0);
      float voltage = sensorValue * (5.0 / 1023.0);
      int temperatura = voltage/(0.1);
     // Serial.println(temperatura);

     ///Logica do sensor***
            if(j==0){
                  Serial.println("UNICA");
                  Serial.println(temperatura);
                  temp1=temperatura;
                 }
                  if(j==1){
                    Serial.println("DUAS");
                    if(temperatura==temp1){
                  Serial.println(temperatura);
                  Serial.println(temperatura);
                    }else{
                      Serial.println(temp1);
                    Serial.println(temperatura);
                    
                    
                 }
                 temp2=temperatura;
                  }
                  if(j==2){
                    Serial.println("TRES");
                    if(temperatura==temp2){
                  Serial.println(temp1);
                  Serial.println(temperatura);
                  Serial.println(temperatura);
                  }else{
                    Serial.println(temp1);
                  Serial.println(temp2);
                  Serial.println(temperatura);
                  }
                  temp3=temperatura;
                 }
                  if(j==3){
                    Serial.println("QUATRO");
                    if(temperatura==temp3){
                  Serial.println(temp1);
                  Serial.println(temp2);
                  Serial.println(temp3);
                  Serial.println(temperatura);
                    }else{
                      Serial.println(temp1);
                  Serial.println(temp2);
                  Serial.println(temp3);
                  Serial.println(temperatura);
                 }
                 temp4=temperatura;
                  }

